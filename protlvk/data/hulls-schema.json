{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "defaultHull": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "modification": {
                    "type": "integer"
                }
            },
            "required": ["id", "modification"]
        },
        "data": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "modification": {
                        "type": "integer"
                    },
                    "physics": {
                        "type": "object",
                        "properties": {
                            "speed": {
                                "type": "number"
                            },
                            "turnSpeed": {
                                "type": "number"
                            },
                            "acceleration": {
                                "type": "number"
                            },
                            "reverseAcceleration": {
                                "type": "number"
                            },
                            "sideAcceleration": {
                                "type": "number"
                            },
                            "turnAcceleration": {
                                "type": "number"
                            },
                            "reverseTurnAcceleration": {
                                "type": "number"
                            },
                            "damping": {
                                "type": "number"
                            },
                            "mass": {
                                "type": "number"
                            }
                        },
                        "required": [
                            "speed",
                            "turnSpeed",
                            "acceleration",
                            "reverseAcceleration",
                            "sideAcceleration",
                            "turnAcceleration",
                            "reverseTurnAcceleration",
                            "damping",
                            "mass"
                        ],
                        "additionalProperties": false
                    }
                },
                "required": ["id", "modification", "physics"]
            }
        }
    },
    "required": ["defaultHull", "data"],
    "dependencies": {
        "defaultHull": ["data"]
    }
}
